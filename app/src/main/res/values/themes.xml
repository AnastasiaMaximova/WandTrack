<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WandTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_teal</item>
        <item name="colorPrimaryVariant">@color/teal</item>
        <item name="colorOnPrimary">@color/wheat</item>
        <item name="colorSecondary">@color/light_maroon</item>
        <item name="colorSecondaryVariant">@color/maroon</item>
        <item name="colorOnSecondary">@color/wheat</item>
        <item name="android:windowBackground">@color/wheat</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_teal</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/maroon</item>
        <item name="tabTextColor">@color/charcoal</item>
        <item name="tabIndicatorColor">@color/maroon</item>
        <item name="tabTextAppearance">@style/Header.2</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/teal</item>
        <item name="titleTextAppearance">@style/Header.1</item>
        <item name="titleTextColor">@color/charcoal</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Header.2</item>
        <item name="backgroundTint">@color/maroon</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>

    <style name="Header">
        <item name="android:textColor">@color/charcoal</item>
        <item name="fontFamily">@font/daily_prophet_font</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/charcoal</item>
        <item name="fontFamily">@font/lumos_font</item>
    </style>

    <style name="Header.1" parent="Header">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Header.2" parent="Header">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body.1" parent="Body">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body.2" parent="Body">
        <item name="android:textSize">14sp</item>
    </style>
</resources>